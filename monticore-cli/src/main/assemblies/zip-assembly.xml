<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>monticore-cli-zip</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <includeSiteDirectory>false</includeSiteDirectory>
  <files>
    <file>
      <source>target/monticore-cli-${project.version}-jar-with-dependencies.jar</source>
      <destName>monticore-cli.jar</destName>
      <outputDirectory>mc-workspace</outputDirectory>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>mc-workspace</outputDirectory>
      <unpack>true</unpack>
      <scope>runtime</scope>
      <includes>
        <include>de.monticore.lang:automaton</include>
      </includes>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>
</assembly>
