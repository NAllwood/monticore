grammar Automaton3 extends de.monticore.MCBasics, de.monticore.literals.MCCommonLiterals {

Automaton =
  "automaton" Name "{" (State | Transition)* "}" ;

State = "state" Name  prio:NatLiteral?
  ( ["initial"] |  ["final"] )*
  ( ("{" (State | Transition)* "}") | ";") ;

Transition =
  from:Name "-" input:Name ">" to:Name ";" ;

}
